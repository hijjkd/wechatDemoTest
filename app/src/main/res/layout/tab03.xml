<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的资料"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/id_head_portrait"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:src="@drawable/head_portrait" />

    <TextView
        android:id="@+id/id_show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_show_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所属部门：xxx"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:id="@+id/id_ahou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号:15638819563"
        android:layout_centerVertical="true"
        android:textSize="15sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱:737720233@qq.com"
        android:layout_centerVertical="true"
        android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="响铃提示开关" />

        <Switch
            android:id="@+id/id_set_bell"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="勿扰模式开关" />

        <Switch
            android:id="@+id/id_set_disturb"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            />



    </RelativeLayout>

    <Button
        android:id="@+id/id_change_password"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="修改密码" />

    <Button
        android:id="@+id/id_exit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="退出" />

</LinearLayout>